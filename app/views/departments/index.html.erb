<% if current_user %>
    <div class="jumbotron">
        <h1 class="display-4">Hello, <%= current_user.name %></h1>
        <p class="lead">Welcome to The Federal Polytechnic, Ado-Ekiti Facility Management System.</p>
        <hr class="my-4">
        <% if current_user.admin? %>
            <p class="lead">
                <%# Click the button below on visi the admin page %>
                <%= link_to "Go-to Admin Panel", rails_admin_path, class: "btn btn-primary btn-sm" %>
            </p>
        <% end %>
    </div>
<% else %>
    <%= link_to "Sign in", new_user_session_path %>
<% end %>

<div class="row">
    <ul>
        <% @departments.each do |department| %>
            <li><%= link_to department.name, department %></li>
        <% end %>
    </ul>
</div>